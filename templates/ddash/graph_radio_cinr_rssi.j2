{% macro interface(interface, lindex) -%}
{
  "title": "RSSI/CINR ${{interface.type}}",
  "aliasColors": {},
  "bars": false,
  "internal_comment":"graph_radio_cinr_rssi.j2",
  "datasource": null,
  "fill": 1,
  "grid": {
    "threshold1": null,
    "threshold1Color": "rgba(216, 200, 27, 0.27)",
    "threshold2": null,
    "threshold2Color": "rgba(234, 112, 112, 0.22)"
  },
  "id": {{lindex + 4000}},
  "legend": {
    "alignAsTable": true,
    "avg": true,
    "current": true,
    "max": true,
    "min": true,
    "show": true,
    "sortDesc": true,
    "total": false,
    "values": true
  },
  "lines": true,
  "linewidth": 2,
  "links": [],
  "minSpan": 6,
  "nullPointMode": "connected",
  "percentage": false,
  "pointradius": 5,
  "points": false,
  "renderer": "flot",
  "repeat": "{{interface.type}}",
  "scopedVars": {
    "{{interface.type}}": {
      "selected": true,
      "text": "{{interface.ports[0].name}}({{interface.ports[0].descr}})",
      "value": "{{interface.ports[0].name}}"
    }
  },
  "span": 12,
  "stack": false,
  "steppedLine": false,
  "targets": [
    {
      "intervalFactor": 1,
      "query": "SELECT $timeSeries as t, avg(rssi) as `RSSI`, avg(cinr) as `CINR` FROM $table WHERE managed_object = $bi_id and interface=toString(${{interface.type}}) and $timeFilter and (cinr != -32555 and rssi != -32555) GROUP BY t ORDER BY t",
      "refId": "A",
      "resultFormat": "time_series",
      "database": "{{ noc_db_metrics }}",
      "tableLoading": false,
      "table": "interface",
      "dateLoading": false,
      "datetimeLoading": false,
      "dateColDataType": "date",
      "dateTimeColDataType": "ts",
      "interval": "$discovery_interval"
    }
  ],
  "timeFrom": null,
  "timeShift": null,
  "tooltip": {
    "msResolution": false,
    "shared": true,
    "sort": 0,
    "value_type": "cumulative"
  },
  "type": "graph",
  "xaxis": {
    "show": true
  },
  "y-axis": true,
  "yaxes": [
    {
      "format": "dB",
      "label": "dB",
      "logBase": 1,
      "max": null,
      "min": null,
      "show": true
    },
    {
      "logBase": 1,
      "format": "short",
      "max": null,
      "min": null,
      "label": null,
      "show": true
    }
  ]
}
{%- endmacro %}

